<%= form_for(@subscription, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @subscription.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h4>

      <ul>
      <% @subscription.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lastname, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :lastname, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :grade_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :grade_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :section_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :section_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :level_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :level_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :paymentmethod_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :paymentmethod_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :school_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :school_id, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :active, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fechaingreso, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fechaingreso, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fechainactivo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :fechainactivo, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
